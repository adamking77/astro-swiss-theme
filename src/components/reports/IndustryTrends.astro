---
interface Props {
  data?: {
    title?: string;
    subtitle?: string;
    chartPlaceholder?: string;
    digitalTransformation?: {
      title?: string;
      description?: string;
    };
    adoption?: {
      label?: string;
      percentage?: number;
    };
    potential?: {
      label?: string;
      percentage?: number;
    };
  };
}

const { data = {} } = Astro.props;

// Default fallback data
const defaultData = {
  title: "Industry Trends",
  subtitle: "",
  chartPlaceholder: "[Placeholder for Bar Chart]\n(Originally implemented with Recharts)",
  digitalTransformation: {
    title: "Digital Transformation",
    description: "Technology sector leads adoption rates with 85% implementation, while traditional industries show significant growth potential."
  },
  adoption: {
    label: "Current Adoption",
    percentage: 62
  },
  potential: {
    label: "Growth Potential",
    percentage: 84
  }
};

const trendsData = { ...defaultData, ...data };
const isVisible = true; // Simulate visibility
// Note: This component originally used 'recharts' for a BarChart, 'useScrollTrigger',
// and animated progress bars. For this structural conversion, these are represented by placeholders.
// Full implementation will require client-side solutions.
// Removed animation-delay styles for this structural conversion.
---
<section class="py-16 lg:py-20">
  <div class="max-w-4xl mx-auto px-20 lg:px-24">
    <div class="grid lg:grid-cols-12 gap-20">
      <div class="lg:col-span-7">
        <div class="space-y-12">
          <div class="space-y-8"> {/* Removed animate-fade-in */}
            <h2 class="text-4xl md:text-5xl font-light leading-tight tracking-tight text-foreground hover:scale-105 transition-transform duration-300">
              {trendsData.title}
            </h2>
            <div class="w-12 h-px bg-foreground/20 transition-all duration-1000 hover:w-24"></div>
          </div>
          
          <div class="h-64 w-full group cursor-pointer"> {/* Removed animate-fade-in and style */}
            <div class="w-full h-full border border-foreground/20 rounded-lg bg-foreground/5 hover:bg-foreground/10 transition-colors duration-300 p-6">
              <div class="w-full h-full flex flex-col">
                <!-- Chart Title -->
                <div class="text-center mb-4">
                  <h4 class="text-base font-light text-foreground mb-1">Technology Adoption Trends</h4>
                  <p class="text-xs text-foreground/60">Industry Progress Overview</p>
                </div>
                
                <!-- Demo Trend Lines Chart -->
                <div class="flex-1 relative">
                  <!-- Y-axis labels -->
                  <div class="absolute left-0 top-0 h-full flex flex-col justify-between text-xs text-foreground/40 pr-2">
                    <span>100%</span>
                    <span>75%</span>
                    <span>50%</span>
                    <span>25%</span>
                    <span>0%</span>
                  </div>
                  
                  <!-- Chart area -->
                  <div class="ml-8 h-full relative bg-foreground/5 rounded">
                    <!-- Grid lines -->
                    <div class="absolute inset-0">
                      <div class="h-full w-full">
                        <div class="border-b border-foreground/10 h-1/4"></div>
                        <div class="border-b border-foreground/10 h-1/4"></div>
                        <div class="border-b border-foreground/10 h-1/4"></div>
                        <div class="border-b border-foreground/10 h-1/4"></div>
                      </div>
                    </div>
                    
                    <!-- Trend lines using CSS -->
                    <div class="absolute inset-0 flex items-end p-2">
                      <!-- Cloud Computing trend -->
                      <div class="flex-1 relative h-full flex flex-col justify-end">
                        <div class="relative">
                          <!-- Data points -->
                          <div class="absolute bottom-0 left-1/2 transform -translate-x-1/2 w-2 h-2 bg-foreground/60 rounded-full"></div>
                          <div class="absolute bottom-8 left-1/4 transform -translate-x-1/2 w-2 h-2 bg-foreground/60 rounded-full"></div>
                          <div class="absolute bottom-12 left-3/4 transform -translate-x-1/2 w-2 h-2 bg-foreground/60 rounded-full"></div>
                          <!-- Trend line simulation -->
                          <div class="h-16 bg-gradient-to-t from-foreground/30 to-transparent rounded-t"></div>
                        </div>
                        <span class="text-xs text-foreground/60 text-center mt-1">Cloud</span>
                      </div>
                      
                      <!-- AI/ML trend -->
                      <div class="flex-1 relative h-full flex flex-col justify-end">
                        <div class="relative">
                          <div class="absolute bottom-0 left-1/2 transform -translate-x-1/2 w-2 h-2 bg-green-500 rounded-full"></div>
                          <div class="absolute bottom-6 left-1/4 transform -translate-x-1/2 w-2 h-2 bg-green-500 rounded-full"></div>
                          <div class="absolute bottom-10 left-3/4 transform -translate-x-1/2 w-2 h-2 bg-green-500 rounded-full"></div>
                          <div class="h-12 bg-gradient-to-t from-green-500/30 to-transparent rounded-t"></div>
                        </div>
                        <span class="text-xs text-foreground/60 text-center mt-1">AI/ML</span>
                      </div>
                      
                      <!-- Automation trend -->
                      <div class="flex-1 relative h-full flex flex-col justify-end">
                        <div class="relative">
                          <div class="absolute bottom-0 left-1/2 transform -translate-x-1/2 w-2 h-2 bg-orange-500 rounded-full"></div>
                          <div class="absolute bottom-5 left-1/4 transform -translate-x-1/2 w-2 h-2 bg-orange-500 rounded-full"></div>
                          <div class="absolute bottom-14 left-3/4 transform -translate-x-1/2 w-2 h-2 bg-orange-500 rounded-full"></div>
                          <div class="h-20 bg-gradient-to-t from-orange-500/30 to-transparent rounded-t"></div>
                        </div>
                        <span class="text-xs text-foreground/60 text-center mt-1">Auto</span>
                      </div>
                      
                      <!-- Security trend -->
                      <div class="flex-1 relative h-full flex flex-col justify-end">
                        <div class="relative">
                          <div class="absolute bottom-0 left-1/2 transform -translate-x-1/2 w-2 h-2 bg-red-500 rounded-full"></div>
                          <div class="absolute bottom-7 left-1/4 transform -translate-x-1/2 w-2 h-2 bg-red-500 rounded-full"></div>
                          <div class="absolute bottom-11 left-3/4 transform -translate-x-1/2 w-2 h-2 bg-red-500 rounded-full"></div>
                          <div class="h-16 bg-gradient-to-t from-red-500/30 to-transparent rounded-t"></div>
                        </div>
                        <span class="text-xs text-foreground/60 text-center mt-1">Security</span>
                      </div>
                    </div>
                  </div>
                </div>
                
                <!-- Chart Legend -->
                <div class="flex justify-center items-center space-x-4 mt-3 pt-3 border-t border-foreground/10">
                  <div class="flex items-center space-x-1">
                    <div class="w-2 h-2 bg-foreground/60 rounded-full"></div>
                    <span class="text-xs font-light text-foreground/70">Cloud: 94%</span>
                  </div>
                  <div class="flex items-center space-x-1">
                    <div class="w-2 h-2 bg-green-500 rounded-full"></div>
                    <span class="text-xs font-light text-foreground/70">AI/ML: 78%</span>
                  </div>
                  <div class="flex items-center space-x-1">
                    <div class="w-2 h-2 bg-orange-500 rounded-full"></div>
                    <span class="text-xs font-light text-foreground/70">Automation: 85%</span>
                  </div>
                  <div class="flex items-center space-x-1">
                    <div class="w-2 h-2 bg-red-500 rounded-full"></div>
                    <span class="text-xs font-light text-foreground/70">Security: 96%</span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      
      <div class="lg:col-span-4 lg:col-start-9">
        <div class="space-y-12">
          <div class="space-y-6"> {/* Removed animate-fade-in and style */}
            <h3 class="text-xl font-light text-foreground hover:scale-105 transition-transform duration-300">{trendsData.digitalTransformation.title}</h3>
            <p class="text-sm font-light text-foreground leading-relaxed">
              {trendsData.digitalTransformation.description}
            </p>
          </div>
          
          <div class="space-y-8">
            <div> {/* Removed animate-fade-in and style */}
              <div class="flex justify-between items-end mb-2">
                <span class="text-sm font-light text-foreground">{trendsData.adoption.label}</span>
                <span class="text-sm font-light text-foreground">{trendsData.adoption.percentage}%</span>
              </div>
              <div class="w-full bg-foreground/10 h-1 rounded-full overflow-hidden">
                <div
                  class="bg-foreground h-full rounded-full"
                  style={{ width: isVisible ? `${trendsData.adoption.percentage}%` : '0%' }}
                />
              </div>
            </div>
            
            <div> {/* Removed animate-fade-in and style */}
              <div class="flex justify-between items-end mb-2">
                <span class="text-sm font-light text-foreground">{trendsData.potential.label}</span>
                <span class="text-sm font-light text-foreground">{trendsData.potential.percentage}%</span>
              </div>
              <div class="w-full bg-foreground/10 h-1 rounded-full overflow-hidden">
                <div
                  class="bg-foreground/30 h-full rounded-full"
                  style={{ width: isVisible ? `${trendsData.potential.percentage}%` : '0%' }}
                />
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>