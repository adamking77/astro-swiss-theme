---
import { Button } from '../ui/button.tsx';
import ScrollAnimator from '../interactive/ScrollAnimator.tsx';

interface Props {
  title: string;
  subtitle?: string;
  location: string;
  ctaText: string;
  ctaLink: string;
}

const { 
  title, 
  subtitle,
  location,
  ctaText,
  ctaLink
} = Astro.props;
---

<section class="company-hero-section pt-60 pb-48 lg:pt-72 lg:pb-56 bg-background text-foreground">
  <div class="max-w-6xl mx-auto px-6 lg:px-8">
    <div class="space-y-12">
      <div>
        <ScrollAnimator client:visible threshold={0.2} duration={1000}>
          <h2 class="text-3xl md:text-4xl lg:text-5xl font-light leading-[1.1] tracking-tight max-w-5xl text-foreground">
            {title} <span class="text-foreground/50">{location}</span>
          </h1>
        </ScrollAnimator>
      </div>
      
      {subtitle && (
        <div>
          <ScrollAnimator client:visible threshold={0.2} duration={1000} delay={200}>
            <p class="text-lg font-light text-foreground/70 leading-relaxed max-w-2xl">
              {subtitle}
            </p>
          </ScrollAnimator>
        </div>
      )}
      
      <div>
        <ScrollAnimator client:visible threshold={0.2} duration={1000} delay={400}>
          <a href={ctaLink}>
            <Button 
              variant="pill" 
              size="pill-lg"
              withSwissAccent={true}
            >
              {ctaText}
            </Button>
          </a>
        </ScrollAnimator>
      </div>
    </div>
  </div>
</section>

