---
import BaseLayout from '../layouts/BaseLayout.astro';

// Layout Components
import Hero from '../components/Hero.astro';
import HybridShowcase from '../components/layouts/HybridShowcase.astro';
import Timeline from '../components/layouts/Timeline.astro';
import ContentSplit from '../components/layouts/ContentSplit.astro';
import CompanyMission from '../components/layouts/CompanyMission.astro';
import DataStory from '../components/layouts/DataStory.astro';

// Section Components
import About from '../components/sections/About.astro';
import Services from '../components/sections/Services.astro';
import CTA from '../components/sections/CTA.astro';
import Contact from '../components/sections/Contact.tsx';

// Data for components
const hybridShowcaseItems = [
  { label: "Typography", value: "Swiss", description: "Clean typography system" },
  { label: "Layouts", value: "Flexible", description: "20+ layout components" },
  { label: "Components", value: "Modern", description: "React & Astro ready" },
  { label: "Performance", value: "Fast", description: "Optimized builds" },
  { label: "Accessibility", value: "A11y", description: "WCAG compliant" },
  { label: "SEO", value: "Optimized", description: "Schema & meta tags" },
  { label: "TypeScript", value: "Safe", description: "Full type safety" },
  { label: "CMS", value: "Ready", description: "Headless CMS support" }
];

const timelineEvents = [
  {
    date: "2019",
    title: "Company Founded",
    description: "Started with a vision to bridge the gap between innovative design and robust engineering solutions."
  },
  {
    date: "2020",
    title: "First Enterprise Client",
    description: "Delivered our first major enterprise solution, establishing our reputation for quality and reliability."
  },
  {
    date: "2021",
    title: "Team Expansion",
    description: "Grew to a team of 15+ specialists across design, engineering, and strategy disciplines."
  },
  {
    date: "2023",
    title: "International Reach",
    description: "Expanded operations to serve clients across 15+ countries with 24/7 support capabilities."
  },
  {
    date: "2024",
    title: "Innovation Lab",
    description: "Launched our R&D division focusing on emerging technologies and future-forward solutions."
  }
];

// Data for ContentSplit with Chart Integration
const themeCapabilities = [
  { 
    title: "Swiss Design System", 
    description: "Clean typography, precise spacing, and minimalist layouts following Swiss design principles.",
    meta: "Design"
  },
  { 
    title: "Modern Architecture", 
    description: "Built with Astro v5, TypeScript, and Tailwind CSS for optimal performance and developer experience.",
    meta: "Technology"
  },
  { 
    title: "Component Library", 
    description: "20+ pre-built layout components including ContentSplit, Timeline, DataStory, and more.",
    meta: "Components"
  },
  { 
    title: "CMS Integration", 
    description: "Ready for headless CMS integration with Zod validation and structured content collections.",
    meta: "Features"
  }
];

// Data for DataStory component
const performanceMetrics = [
  ["99/100", "95%", "< 1s", "100%"],
  ["Lighthouse", "Accessibility", "Load Time", "SEO Score"],
  ["A+ Grade", "WCAG 2.1", "Core Vitals", "Schema.org"],
  ["20+ Components", "TypeScript", "Astro v5", "MDX Support"]
];
---

<BaseLayout 
  title="Swiss Astro Theme - Modern Design System for Astro" 
  description="A comprehensive Astro theme based on Swiss design principles. Clean typography, flexible layouts, TypeScript support, and CMS-ready architecture."
>
  {/* Section 1: Hero */}
  <Hero 
    ctaPrimaryLink="#services"
  />

  {/* Section 2: Theme Capabilities Showcase */}
  <HybridShowcase 
    primaryText="Swiss Design"
    accentText="Theme Capabilities"
    gridTitle="Built-in Features"
    gridItems={hybridShowcaseItems}
  />
  
  <Services />

  {/* Section 3: Design Philosophy */}
  <CompanyMission 
    company="Swiss Astro Theme"
    title="Swiss Design Principles Meet Modern Web Development"
    subtitle="Clean typography, functional layouts, and purposeful white space create digital experiences that prioritize clarity and usability. Every component is crafted with precision and attention to detail."
    navigation={["Components", "Documentation", "Reports", "Examples"]}
  />

  {/* Section 4: Company Journey */}
  <Timeline 
    title="Development Timeline"
    events={timelineEvents}
  />
  
  {/* Section 5: About & Trust Building */}
  <About />

  {/* Section 6: Interactive Demo with Charts */}
  <ContentSplit 
    leftTitle="Theme Architecture"
    leftDescription="This theme demonstrates modern web development practices with Swiss design principles. Built on Astro v5 with TypeScript, it provides a solid foundation for creating beautiful, performant websites with excellent developer experience."
    rightTitle="Performance Visualization"
    rightChart={{
      id: "theme-performance-chart",
      title: "Theme Performance Metrics",
      description: "Real-time performance data showing build times, bundle size, and loading speeds",
      embedUrl: "https://graph-zen.app?embed=true&",
      height: "450px"
    }}
  />

  {/* Section 7: Performance & Metrics */}
  <DataStory 
    year="2024"
    storyTitle="Performance Metrics"
    storyDescription="This theme is built for speed, accessibility, and developer experience. Every component is optimized for performance while maintaining the highest standards of code quality and user experience."
    dataTitle="Technical Excellence"
    dataSubtitle="Measured performance across key web vitals, accessibility standards, and development metrics"
    dataGrid={performanceMetrics}
  />

  {/* Section 8: Get Started */}
  <CTA />
  <Contact client:load />
</BaseLayout>