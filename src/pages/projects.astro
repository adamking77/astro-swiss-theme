---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { getThemeConfig } from '../config/theme.config';
import ScrollAnimator from '../components/interactive/ScrollAnimator.tsx';

// Get projects collection
const projects = await getCollection('projects');
const publishedProjects = projects
  .filter(project => project.data.published)
  .sort((a, b) => {
    // Sort by order field first, then by featured, then by date
    if (a.data.order !== undefined && b.data.order !== undefined) {
      return a.data.order - b.data.order;
    }
    if (a.data.featured && !b.data.featured) return -1;
    if (!a.data.featured && b.data.featured) return 1;
    return new Date(b.data.startDate).getTime() - new Date(a.data.startDate).getTime();
  });

// Get theme config
const themeConfig = getThemeConfig();

// Filter featured projects
const featuredProjects = publishedProjects.filter(project => project.data.featured);
const regularProjects = publishedProjects.filter(project => !project.data.featured);

// Get unique categories and technologies for filtering
const categories = Array.from(new Set(publishedProjects.map(project => project.data.category)));
const technologies = Array.from(new Set(publishedProjects.flatMap(project => project.data.technologies)));
---

<BaseLayout 
  title="Projects Portfolio | Our Work & Case Studies"
  description="Explore our portfolio of successful projects across web development, mobile apps, e-commerce, and design. See how we help businesses transform digitally."
>
  <!-- Projects Hero Section -->
  <section class="pt-32 pb-16 lg:pt-40 lg:pb-24">
    <div class="max-w-6xl mx-auto px-6 lg:px-8">
      <ScrollAnimator client:load threshold={0.2} duration={800}>
        <div class="max-w-3xl">
          <h2 class="text-3xl md:text-4xl lg:text-5xl font-light tracking-tight text-foreground mb-6">
            Our Work
          </h1>
          <p class="text-xl text-muted-foreground font-light leading-relaxed mb-8">
            Discover how we help businesses transform through strategic design and development. 
            Each project represents our commitment to excellence, innovation, and measurable results.
          </p>
          
          <!-- Project Stats -->
          <div class="grid grid-cols-3 gap-8 mb-12">
            <div>
              <div class="text-2xl md:text-3xl font-light text-foreground mb-2">{publishedProjects.length}+</div>
              <div class="text-sm text-muted-foreground font-light">Projects Completed</div>
            </div>
            <div>
              <div class="text-2xl md:text-3xl font-light text-foreground mb-2">{categories.length}</div>
              <div class="text-sm text-muted-foreground font-light">Industries Served</div>
            </div>
            <div>
              <div class="text-2xl md:text-3xl font-light text-foreground mb-2">95%</div>
              <div class="text-sm text-muted-foreground font-light">Client Satisfaction</div>
            </div>
          </div>
        </div>
      </ScrollAnimator>
    </div>
  </section>

  <!-- Featured Projects -->
  {featuredProjects.length > 0 && (
    <section class="py-16 lg:py-24 bg-accent/5">
      <div class="max-w-6xl mx-auto px-6 lg:px-8">
        <ScrollAnimator client:load threshold={0.2} duration={800}>
          <div class="mb-16">
            <h2 class="text-2xl md:text-3xl font-light tracking-tight text-foreground mb-4">
              Featured Projects
            </h2>
            <p class="text-muted-foreground font-light max-w-2xl">
              Highlighting our most impactful work that showcases our expertise and innovative approach.
            </p>
          </div>
        </ScrollAnimator>

        <div class="grid md:grid-cols-2 gap-8 lg:gap-12">
          {featuredProjects.slice(0, 2).map((project, index) => (
            <ScrollAnimator client:load threshold={0.2} duration={800} delay={index * 150}>
              <article class="group hover-lift-subtle">
                <a href={`/projects/${project.slug}`} class="block">
                  {project.data.featuredImage && (
                    <div class="aspect-video mb-6 overflow-hidden rounded-lg bg-accent/10">
                      <img 
                        src={project.data.featuredImage}
                        alt={project.data.title}
                        class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
                        loading="lazy"
                      />
                    </div>
                  )}
                  
                  <div class="space-y-4">
                    <div class="flex flex-wrap items-center gap-2 text-xs">
                      <span class="px-2 py-1 bg-accent/10 text-accent-foreground rounded-full">
                        {project.data.category}
                      </span>
                      {project.data.client && (
                        <span class="text-muted-foreground">for {project.data.client}</span>
                      )}
                    </div>
                    
                    <h3 class="text-xl md:text-2xl font-light tracking-tight text-foreground group-hover:text-foreground/70 transition-colors">
                      {project.data.title}
                    </h3>
                    
                    {project.data.subtitle && (
                      <p class="text-muted-foreground font-light">
                        {project.data.subtitle}
                      </p>
                    )}
                    
                    <p class="text-muted-foreground font-light leading-relaxed">
                      {project.data.excerpt}
                    </p>
                    
                    {project.data.technologies.length > 0 && (
                      <div class="flex flex-wrap gap-2">
                        {project.data.technologies.slice(0, 4).map((tech) => (
                          <span class="text-xs px-2 py-1 bg-secondary text-secondary-foreground rounded">
                            {tech}
                          </span>
                        ))}
                      </div>
                    )}
                  </div>
                </a>
              </article>
            </ScrollAnimator>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- All Projects Grid -->
  <section class="py-16 lg:py-24">
    <div class="max-w-6xl mx-auto px-6 lg:px-8">
      <ScrollAnimator client:load threshold={0.2} duration={800}>
        <div class="mb-16">
          <h2 class="text-2xl md:text-3xl font-light tracking-tight text-foreground mb-4">
            All Projects
          </h2>
          <p class="text-muted-foreground font-light max-w-2xl">
            Browse our complete portfolio of work across various industries and technologies.
          </p>
        </div>
      </ScrollAnimator>

      <!-- Projects Grid -->
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {publishedProjects.map((project, index) => (
          <ScrollAnimator client:load threshold={0.2} duration={800} delay={index * 100}>
            <article class="group hover-lift-subtle">
              <a href={`/projects/${project.slug}`} class="block">
                {project.data.featuredImage && (
                  <div class="aspect-video mb-4 overflow-hidden rounded-lg bg-accent/10">
                    <img 
                      src={project.data.featuredImage}
                      alt={project.data.title}
                      class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
                      loading="lazy"
                    />
                  </div>
                )}
                
                <div class="space-y-3">
                  <div class="flex items-center justify-between text-xs">
                    <span class="px-2 py-1 bg-accent/10 text-accent-foreground rounded-full">
                      {project.data.category}
                    </span>
                    {project.data.status === 'in-progress' && (
                      <span class="px-2 py-1 bg-amber-100 text-amber-800 rounded-full">
                        In Progress
                      </span>
                    )}
                  </div>
                  
                  <h3 class="text-lg font-light tracking-tight text-foreground group-hover:text-foreground/70 transition-colors">
                    {project.data.title}
                  </h3>
                  
                  <p class="text-sm text-muted-foreground font-light leading-relaxed line-clamp-2">
                    {project.data.excerpt}
                  </p>
                  
                  {project.data.client && (
                    <p class="text-xs text-muted-foreground">
                      Client: {project.data.client}
                    </p>
                  )}
                  
                  {project.data.technologies.length > 0 && (
                    <div class="flex flex-wrap gap-1">
                      {project.data.technologies.slice(0, 3).map((tech) => (
                        <span class="text-xs px-2 py-1 bg-secondary text-secondary-foreground rounded">
                          {tech}
                        </span>
                      ))}
                      {project.data.technologies.length > 3 && (
                        <span class="text-xs px-2 py-1 bg-muted text-muted-foreground rounded">
                          +{project.data.technologies.length - 3}
                        </span>
                      )}
                    </div>
                  )}
                </div>
              </a>
            </article>
          </ScrollAnimator>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 lg:py-24 bg-accent/5">
    <div class="max-w-6xl mx-auto px-6 lg:px-8 text-center">
      <ScrollAnimator client:load threshold={0.2} duration={800}>
        <h2 class="text-2xl md:text-3xl font-light tracking-tight text-foreground mb-4">
          Ready to Start Your Project?
        </h2>
        <p class="text-muted-foreground font-light max-w-2xl mx-auto mb-8">
          Let's discuss how we can help transform your business with innovative design and development solutions.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a 
            href="/contact" 
            class="inline-flex items-center justify-center px-6 py-3 bg-accent text-accent-foreground hover:bg-accent/90 rounded-full font-light transition-colors"
          >
            Start a Project
          </a>
          <a 
            href="/reports" 
            class="inline-flex items-center justify-center px-6 py-3 border border-border hover:bg-accent/5 rounded-full font-light transition-colors"
          >
            View Our Insights
          </a>
        </div>
      </ScrollAnimator>
    </div>
  </section>
</BaseLayout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>